// Schema SQLite (local) - use com: npx prisma ... --schema prisma/schema.sqlite.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  username     String    @unique
  passwordHash String    @map("password_hash")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  sessions Session[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  tokenHash String   @unique @map("token_hash")
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model Operation {
  id                String   @id @default(cuid())
  name              String
  dailyBudget       Float    @map("daily_budget")
  pixAccount        String   @map("pix_account")
  expenseCategories String?  @map("expense_categories") // JSON: [{ id, label }]
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  dailyEntries DailyEntry[]

  @@map("operations")
}

model DailyEntry {
  id           String   @id @default(cuid())
  date         DateTime
  operationId  String   @map("operation_id")
  observations String?

  operation Operation @relation(fields: [operationId], references: [id], onDelete: Cascade)
  expenses  Expense[]
  revenues  Revenue[]

  @@unique([operationId, date])
  @@index([operationId])
  @@index([date])
  @@map("daily_entries")
}

model Expense {
  id           String   @id @default(cuid())
  dailyEntryId String   @map("daily_entry_id")
  category     String   // ADS | IA | CHIPS | VARIAVEL
  amount       Float
  description  String?
  isMonthly    Boolean  @default(false) @map("is_monthly")
  manualAdjust Float?   @map("manual_adjust")
  createdAt    DateTime @default(now()) @map("created_at")

  dailyEntry DailyEntry @relation(fields: [dailyEntryId], references: [id], onDelete: Cascade)

  @@index([dailyEntryId])
  @@map("expenses")
}

model Revenue {
  id           String   @id @default(cuid())
  dailyEntryId String   @map("daily_entry_id")
  amount       Float
  description  String?
  time         String?  // Hor√°rio opcional no formato HH:mm
  createdAt    DateTime @default(now()) @map("created_at")

  dailyEntry DailyEntry @relation(fields: [dailyEntryId], references: [id], onDelete: Cascade)

  @@index([dailyEntryId])
  @@map("revenues")
}

